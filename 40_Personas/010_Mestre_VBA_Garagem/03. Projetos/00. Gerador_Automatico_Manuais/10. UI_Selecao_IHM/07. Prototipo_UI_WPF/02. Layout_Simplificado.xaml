<Window x:Class="LabCogKHS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seletor Rápido de IHM" Height="450" Width="400">
    
    <!-- Layout Vertical Simples -->
    <StackPanel Margin="20">
        
        <!-- 1. O Cabeçalho -->
        <TextBlock Text="Selecione o Modelo da IHM:" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- 2. A Caixa de Seleção (ComboBox) -->
        <!-- ItemsSource: A lista de dados vinda do CSV/Excel -->
        <!-- DisplayMemberPath: O que o usuário vê escrito (ex: "Clearline 3.0") -->
        <!-- SelectedItem: Onde guardamos a escolha atual -->
        <ComboBox x:Name="cboIHMs" 
                  ItemsSource="{Binding ListaDeIHMs}" 
                  DisplayMemberPath="Modelo"
                  SelectedItem="{Binding IHMSelecionada}"
                  Height="30" FontSize="14"/>

        <!-- Separador Visual -->
        <Separator Margin="0,20"/>

        <!-- 3. A Área de Visualização (Só aparece se algo estiver selecionado) -->
        <StackPanel DataContext="{Binding ElementName=cboIHMs, Path=SelectedItem}">
            
            <!-- A Imagem (Thumbnail) -->
            <Image Source="{Binding Path_Thumbnail}" 
                   Height="200" Stretch="Uniform"
                   Margin="0,0,0,10"/>
            
            <!-- O Nome Completo -->
            <TextBlock Text="{Binding Modelo}" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            
            <!-- A Descrição Técnica -->
            <TextBlock Text="{Binding Descricao_Visual}" 
                       FontSize="12" FontStyle="Italic" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Center" Margin="0,5"/>
            
            <!-- O Status (Ativo/Legado) -->
            <Border Background="#EEE" CornerRadius="5" Padding="10" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="{Binding Status}" FontWeight="Bold" Foreground="#555"/>
            </Border>
            
        </StackPanel>
        
        <!-- 4. Botão de Ação -->
        <Button Content="Confirmar Seleção" 
                Height="40" Margin="0,20,0,0"
                Background="#007ACC" Foreground="White" FontWeight="Bold"/>

    </StackPanel>
</Window>
